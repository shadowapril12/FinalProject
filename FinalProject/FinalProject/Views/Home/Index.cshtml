@{
    Layout = null;
}

<!--Представление по умолчанию приложения в целом-->
<!DOCTYPE html>
<html>
<head>
    <title>Главная</title>
    <link type="text/css" rel="stylesheet" href="../../Content/MainPage.css" />
</head>
<body>
    <div>
        <p class="div-p">Пользователь: @ViewBag.User.Login</p>
    </div>
    <div>
        @if(ViewBag.Questionnaires.Count > 0)
        {
            <a href="/Questionnaire/index" class="link">Перейти к редактированию анкет</a>
            foreach(var questionnaire in ViewBag.Questionnaires)
            {
                using (Html.BeginForm("StartTesting", "Testing", FormMethod.Post, new { @class = "Form" }))
                {
                    <p class="form-label">Название анкеты: @questionnaire.Name</p>
                    <input type="hidden" name="Id" value="@questionnaire.Id"/>
                    <input type="hidden" name="userId" value="@ViewBag.User.Id" />
                    <input type="submit" value="Пройти"/>
                }               

            }
        }
        else
        {
            <div class="div">Анкеты пока отсутствуют</div>
        }
        <div>
            @using (Html.BeginForm("AddQuestionnaireForm", "Questionnaire", FormMethod.Post))
            {
                 <button class="sub">Добавить анкету</button>
            }          
        </div>
    </div>
</body>
</html>