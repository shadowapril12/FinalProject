@model FinalProject.Models.Questionnaire

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Форма добавления анкеты</title>
    <link type="text/css" rel="stylesheet" href="../../Content/AddQuestionnaire.css" />
</head>
<body>
    <div style="border-width: 1px; border-style:solid; border-color:black">
        @using (Html.BeginForm("AddQuestionnaire", "Questionnaire", FormMethod.Post, new { @class="addForm" }))
        {
            @Html.LabelFor(model => model.Name, "Название анкеты");
            <br />
            @Html.TextBoxFor(model => model.Name, new { @class = "editor"});
            <br />
            <input type="submit" value="Добавить"/>            
        }
    </div>
</body>
</html>

