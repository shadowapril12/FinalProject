@model FinalProject.Models.Question

@{
    Layout = null;
}

<!DOCTYPE html>
<hml>
    <head>
        <title>Редактирование вопросов</title>
        <link type="text/css" rel="stylesheet" href="../../Content/EditQuestion.css" />
    </head>
<body>
    <div>
        @using (Html.BeginForm("EditQuestion", "Question", FormMethod.Post, new { @class = "Form"}))
        {
            @Html.ActionLink("Перейти к списку вопросов", "GetQuestions", "Question", new { id = Model.QuestionnaireId })
            <br />
            @Html.LabelFor(model => model.Formulation, "Формулировка вопроса: ", new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Formulation, new { @class = "editor" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.QuestionnaireId)
            <input type="submit" value="Подтвердить"/>
        }
    </div>
</body>
</hml>

